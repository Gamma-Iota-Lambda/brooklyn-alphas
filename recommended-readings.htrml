      font-family: 'Playfair Display', serif;
      font-size: clamp(5rem, 18vw, 16rem);
      font-weight: 900;
      font-style: italic;
      color: transparent;
      -webkit-text-stroke: 1px rgba(184,134,11,0.07);
      line-height: 0.85;
      user-select: none;
      pointer-events: none;
      letter-spacing: -0.03em;
    }
    .rr-hero-content {
      position: relative;
      z-index: 2;
      max-width: 760px;
    }
    .rr-back {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.7rem;
      font-weight: 600;
      letter-spacing: 0.22em;
      text-transform: uppercase;
      color: var(--gold);
      text-decoration: none;
      margin-bottom: 2.5rem;
      transition: gap 0.2s;
    }
    .rr-back:hover { gap: 0.8rem; }
    .rr-back::before { content: '←'; }
    .rr-eyebrow {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1.25rem;
    }
    .rr-eyebrow::before {
      content: '';
      width: 36px;
      height: 1px;
