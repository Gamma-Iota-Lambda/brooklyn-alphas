  <style>

    /* ─── HERO ─── */
    .rr-hero {
      min-height: 52vh;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      padding: 9rem 8% 5rem;
      position: relative;
      overflow: hidden;
      background: var(--black-soft);
    }
    .rr-hero-bg {
      position: absolute;
      inset: 0;
      background: radial-gradient(ellipse at 55% 50%, rgba(184,134,11,0.10) 0%, transparent 65%);
    }
    .rr-hero-watermark {
      position: absolute;
      right: 3%;
