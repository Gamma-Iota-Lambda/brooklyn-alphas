      background: var(--black-soft);
      padding: 5rem 8%;
      text-align: center;
    }
    .rr-cta h2 {
      font-family: 'Playfair Display', serif;
      font-size: clamp(1.8rem, 4vw, 3rem);
      font-weight: 900;
      color: var(--white);
      margin-bottom: 0.75rem;
    }
    .rr-cta h2 em { font-style: normal; color: var(--gold-bright); }
    .rr-cta p {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.95rem;
      font-weight: 300;
      color: rgba(255,255,255,0.45);
      margin-bottom: 2rem;
      letter-spacing: 0.06em;
    }
    .rr-cta-btns {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

